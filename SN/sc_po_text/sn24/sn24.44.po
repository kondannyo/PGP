#. HTML: <section class="sutta" id="sn24.44"><article><div class="hgroup"><p class="division">
msgctxt "sn24.44:0.1"
msgid "Saṃyutta Nikāya 24 "
msgstr "Linked Discourses 24 "

#. HTML: </p><p>
msgctxt "sn24.44:0.2"
msgid "2. Dutiyagamanavagga "
msgstr "2. The Second Round "

#. HTML: </p><h1>
#. VAR: 44. Adukkhamasukhīsutta → adukkhamasukhīattāsuttaṃ (bj)
msgctxt "sn24.44:0.3"
msgid "44. Adukkhamasukhīsutta "
msgstr "44. The Self Is Neither Happy Nor Suffering "

#. HTML: </h1></div><p>
#. REF: sc1
msgctxt "sn24.44:1.1"
msgid "“Adukkhamasukhī attā hoti arogo paraṃ maraṇā”ti? "
msgstr "“‘The self is neither happy nor suffering, and is sound after death’?” … "

#. HTML: </p><p>
msgctxt "sn24.44:1.2"
msgid "“Bhagavaṃmūlakā no, bhante, dhammā … pe … "
msgstr " "

#. HTML: </p><p>
#. REF: sc2
msgctxt "sn24.44:2.1"
msgid "“Rūpe kho, bhikkhave, sati, rūpaṃ upādāya, rūpaṃ abhinivissa evaṃ diṭṭhi uppajjati: "
msgstr " "

msgctxt "sn24.44:2.2"
msgid "‘adukkhamasukhī attā hoti arogo paraṃ maraṇā’ti. "
msgstr " "

msgctxt "sn24.44:2.3"
msgid "Vedanāya sati … "
msgstr " "

msgctxt "sn24.44:2.4"
msgid "saññāya sati … "
msgstr " "

msgctxt "sn24.44:2.5"
msgid "saṅkhāresu sati … "
msgstr " "

msgctxt "sn24.44:2.6"
msgid "viññāṇe sati, viññāṇaṃ upādāya, viññāṇaṃ abhinivissa evaṃ diṭṭhi uppajjati: "
msgstr " "

msgctxt "sn24.44:2.7"
msgid "‘adukkhamasukhī attā hoti arogo paraṃ maraṇā’ti. "
msgstr " "

#. HTML: </p><p>
#. REF: sc3
msgctxt "sn24.44:3.1"
msgid "Taṃ kiṃ maññatha, bhikkhave, rūpaṃ niccaṃ vā aniccaṃ vā”ti? "
msgstr " "

msgctxt "sn24.44:3.2"
msgid "“Aniccaṃ, bhante” … pe … "
msgstr " "

msgctxt "sn24.44:3.3"
msgid "vipariṇāmadhammaṃ, api nu taṃ anupādāya evaṃ diṭṭhi uppajjeyya: "
msgstr " "

msgctxt "sn24.44:3.4"
msgid "‘adukkhamasukhī attā hoti arogo paraṃ maraṇā’”ti? "
msgstr " "

msgctxt "sn24.44:3.5"
msgid "“No hetaṃ, bhante”. "
msgstr " "

msgctxt "sn24.44:3.6"
msgid "“Iti kho, bhikkhave, dukkhe sati, dukkhaṃ upādāya, dukkhaṃ abhinivissa evaṃ diṭṭhi uppajjati: "
msgstr " "

msgctxt "sn24.44:3.7"
msgid "‘adukkhamasukhī attā hoti arogo paraṃ maraṇā’”ti. "
msgstr " "

msgctxt "sn24.44:3.8"
msgid "“Vedanā … "
msgstr " "

msgctxt "sn24.44:3.9"
msgid "saññā … "
msgstr " "

msgctxt "sn24.44:3.10"
msgid "saṅkhārā … "
msgstr " "

msgctxt "sn24.44:3.11"
msgid "viññāṇaṃ niccaṃ vā aniccaṃ vā”ti? "
msgstr " "

msgctxt "sn24.44:3.12"
msgid "“Aniccaṃ, bhante” … pe … "
msgstr " "

msgctxt "sn24.44:3.13"
msgid "vipariṇāmadhammaṃ, api nu taṃ anupādāya evaṃ diṭṭhi uppajjeyya: "
msgstr " "

msgctxt "sn24.44:3.14"
msgid "‘adukkhamasukhī attā hoti arogo paraṃ maraṇā’”ti? "
msgstr " "

msgctxt "sn24.44:3.15"
msgid "“No hetaṃ, bhante”. "
msgstr " "

msgctxt "sn24.44:3.16"
msgid "“Iti kho, bhikkhave, dukkhe sati, dukkhaṃ upādāya, dukkhaṃ abhinivissa evaṃ diṭṭhi uppajjati: "
msgstr " "

msgctxt "sn24.44:3.17"
msgid "‘adukkhamasukhī attā hoti arogo paraṃ maraṇā’”ti. "
msgstr " "

msgctxt "sn24.44:3.18"
msgid "Chabbīsatimaṃ. "
msgstr " "

#. HTML: </p><p class="endsection">
msgctxt "sn24.44:3.19"
msgid "Dutiyapeyyālo. "
msgstr " "

#. HTML: </p><blockquote class="uddanagatha"><p>
#. REF: sc4
msgctxt "sn24.44:4.1"
msgid "Vātaṃ etaṃ mama so, "
msgstr " "

#. HTML: <br>
msgctxt "sn24.44:4.2"
msgid "attā no ca me siyā; "
msgstr " "

#. HTML: <br>
msgctxt "sn24.44:4.3"
msgid "Natthi karoto hetu ca, "
msgstr " "

#. HTML: <br>
msgctxt "sn24.44:4.4"
msgid "mahādiṭṭhena aṭṭhamaṃ. "
msgstr " "

#. HTML: </p><p>
#. REF: pts-vp-pli3.221, sc5
msgctxt "sn24.44:5.1"
msgid "Sassato asassato ceva, "
msgstr " "

#. HTML: <br>
msgctxt "sn24.44:5.2"
msgid "antānantavā ca vuccati; "
msgstr " "

#. HTML: <br>
msgctxt "sn24.44:5.3"
msgid "Taṃ jīvaṃ aññaṃ jīvañca, "
msgstr " "

#. HTML: <br>
msgctxt "sn24.44:5.4"
msgid "tathāgatena cattāro. "
msgstr " "

#. HTML: </p><p>
#. REF: sc6
msgctxt "sn24.44:6.1"
msgid "Rūpī attā hoti arūpī ca attā hoti, "
msgstr " "

#. HTML: <br>
msgctxt "sn24.44:6.2"
msgid "Rūpī ca arūpī ca attā hoti; "
msgstr " "

#. HTML: <br>
msgctxt "sn24.44:6.3"
msgid "Neva rūpī nārūpī attā hoti, "
msgstr " "

#. HTML: <br>
msgctxt "sn24.44:6.4"
msgid "Ekantasukhī attā hoti. "
msgstr " "

#. HTML: </p><p>
#. REF: sc7
msgctxt "sn24.44:7.1"
msgid "Ekantadukkhī attā hoti, "
msgstr " "

#. HTML: <br>
msgctxt "sn24.44:7.2"
msgid "Sukhadukkhī attā hoti; "
msgstr " "

#. HTML: <br>
msgctxt "sn24.44:7.3"
msgid "Adukkhamasukhī attā hoti, "
msgstr " "

#. HTML: <br>
msgctxt "sn24.44:7.4"
msgid "Arogo paraṃ maraṇāti; "
msgstr " "

#. HTML: <br>
msgctxt "sn24.44:7.5"
msgid "Ime chabbīsati suttā, "
msgstr " "

#. HTML: <br>
msgctxt "sn24.44:7.6"
msgid "Dutiyavārena desitā. "
msgstr ""

#. HTML: </p></blockquote></article></section></body></html>
