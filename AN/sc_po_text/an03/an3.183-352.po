msgctxt "an3.183-352:8.1"
msgid "Suññato animitto ca, "
msgstr " "

#. HTML: <br>
msgctxt "an3.183-352:8.2"
msgid "appaṇihito ca tayo; "
msgstr " "

#. HTML: <br>
msgctxt "an3.183-352:8.3"
msgid "Samādhimūlakā peyyā—"
msgstr " "

#. HTML: <br>
msgctxt "an3.183-352:8.4"
